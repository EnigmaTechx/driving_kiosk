<%- include('./partials/header.ejs') %>
<body>
  <%- include('./partials/navbar.ejs') %>
    <main>
        <section class="sec-main sec-main2">
            <h1>Examiner's View</h1>
        </section>
        <section>
            <div class="form-container">
                <div class="form-content">
                    <div class="row">
                        <h2 class="text-center">List of Drivers Pending Results</h2>
                    </div>
                    <div class="row">
                        <div class="col"> 
                            <form action="filter_pending_list" method="POST"> 
                                <div class="row text-center">
                                    <div class="col">
                                        <div class="mt-4 mb-3">
                                            <select class="form-select" name="test_type" aria-label="Default select example">
                                                <option selected>Select Test Type</option>
                                                <option value="all">All</option>
                                                <option value="G">G</option>
                                                <option value="G2">G2</option>
                                              </select>
                                            
                                            <button class="btn btn-success ms-3" type="submit">
                                            Filter list
                                            </button>
                                        </div>
                                    </div>
                                </div>                                                                                                                                             
                            </form>
                    </div>                    
                </div>
                
                <div class="row">
                    <% if(pending_drivers.length>0){ %>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Driver's Name</th>
                                <th scope="col">Test Type</th>
                                <th scope="col">Car Make</th>
                                <th scope="col">Car Model</th>
                                <th scope="col">Car Year</th>
                                <th scope="col">Car Plate Number</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% for(let i=0; i<pending_drivers.length; i++){ %>
                            <tr>
                                
                                <td><%= pending_drivers[i].username %></td>
                                <td><%= pending_drivers[i].testType %></td>
                                <td><%= pending_drivers[i].carDetails.make %></td>
                                <td><%= pending_drivers[i].carDetails.model %></td>
                                <td><%= pending_drivers[i].carDetails.year %></td>
                                <td><%= pending_drivers[i].carDetails.platenum %></td>
                                <td><button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#<%= pending_drivers[i].username  %>" data-bs-index="<%= i %>">Score</button></td>
                                <!-- Modal -->
                <div class="modal fade" id="<%= pending_drivers[i].username  %>" tabindex="-1" role="dialog" aria-labelledby="driverModalLabel">
                    <div class="modal-dialog" role="document">
                      <form action="/post_score" method="post">
                          <div class="modal-content">
                            <div class="modal-header">
                              <h5 class="modal-title" id="driverModalLabel">Driver Details</h5>
                              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                              <p>Username: <%= pending_drivers[i].username %></p>
                              <div class="row">
                                      <div class="mb-3">
                                        <select class="form-select" name="score">
                                            <option selected>Select Score</option>
                                            <option value="pass">Pass</option>
                                            <option value="fail">Fail</option>
                                          </select>
                                      </div>
                                      <div class="mb-3">
                                        <input type="text" name="user_id" value="<%= pending_drivers[i]._id %>" hidden />
                                        <label for="comment" class="form-label">Comment:</label>
                                        <textarea class="form-control" id="comment" name="comment" rows="3"></textarea>
                                      </div>
                              </div>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Save & Publish</button>
                              </div>
                          </div>
                      </form>
                    </div>
                  </div>
                            </tr>
                            <% }%>
                        </tbody>
                    </table>
                    <% } else{ %>
                    <div class="alert alert-danger" role="alert">
                        No drivers booked yet.
                        <% } %>
                </div>
            </div>
        </section>
    </main>
  <%- include('./partials/footer.ejs') %>
</body>
</html>